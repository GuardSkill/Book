<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />
	<package name="default" namespace="/" extends="struts-default">
		<interceptors>
			<interceptor name="LoginInterceptor"
				class="cn.guardskill.interceptor.LoginInterceptor" />
			<interceptor-stack name="loginStack">
				<interceptor-ref name="LoginInterceptor">
					<param name="excludeMethods">userLogin,
						userAdd,userExist</param>
				</interceptor-ref>  <!--assign method interceptor -->
				<interceptor-ref name="defaultStack">
				</interceptor-ref>
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="loginStack">
		</default-interceptor-ref>
		<global-results>
			<result name="error">/error.jsp</result>
			<result name="nologin">/login.jsp</result>
		</global-results>

		<action name="userAdd" class="userAction" method="userAdd">
			<result name="success">/login.jsp</result>
			<result name="none">/register.jsp</result>
		</action>
		<action name="userLogin" class="userAction" method="userLogin">
			<result name="success" type="chain">showData</result>
			<result name="none">/login.jsp</result>
		</action>

		<action name="userExist" class="userAction" method="userExist">
			<result name="none" type="stream">
				<!-- 指定下载文件的文件类型 -->
				<param name="contentType">text/html</param>
				<!-- 指定由getResult()方法返回输出结果的InputStream -->
				<param name="inputName">result</param>
			</result>
		</action>
		<action name="userOut" class="userAction" method="userOut">
			<result name="success">/login.jsp</result>
		</action>
   		 
		<action name="newBook" class="dataAction" method="newBook">
			<result name="none">/User/newbook.jsp</result>
			<result name="success">/User/welcome.jsp</result>
		</action>
		<action name="showData" class="dataAction" method="showData">
			<result name="success">/User/showdata.jsp</result>
			<result name="student">/User/stushowdata.jsp</result>
			<result name="manager">/User/manshowdata.jsp</result>
			<result name="admin">/User/admshowdata.jsp</result>
		</action>
		<action name="findBook" class="dataAction" method="findBook">
			<result name="success">/User/showdata.jsp</result>
		</action>
		<action name="newInfo" class="dataAction" method="newInfo">
			<result name="success">showInfo</result>
			<result name="none">/User/stushowdata.jsp</result>
		</action>
		<action name="showInfo" class="dataAction" method="showInfo">
			<result name="success">/User/stuinfodata.jsp</result>
			<result name="none">/User/stushowdata.jsp</result>
		</action>
	</package>
</struts>